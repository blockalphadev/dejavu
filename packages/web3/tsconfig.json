{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "noEmit": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@dejavu/web3/*": [
                "./src/*"
            ],
            "@dejavu/core": [
                "../core/src"
            ],
            "@dejavu/core/*": [
                "../core/src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}