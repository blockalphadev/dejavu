{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ES2022",
        "useDefineForClassFields": true,
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "composite": false,
        "declaration": false,
        "declarationMap": false,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@dejavu/core": [
                "../../packages/core/src"
            ],
            "@dejavu/core/*": [
                "../../packages/core/src/*"
            ],
            "@dejavu/ui": [
                "../../packages/ui/src"
            ],
            "@dejavu/ui/*": [
                "../../packages/ui/src/*"
            ],
            "@dejavu/web3": [
                "../../packages/web3/src"
            ],
            "@dejavu/web3/*": [
                "../../packages/web3/src/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}